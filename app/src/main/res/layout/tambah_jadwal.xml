<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutTambahJadwal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Judul -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Jadwal"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <!-- Dropdown pilih device -->
    <Spinner
        android:id="@+id/spinnerDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"/>

    <!-- Input jam mulai -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam Mulai"
        android:layout_marginTop="12dp"/>

    <TimePicker
        android:id="@+id/timePickerMulai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner" />

    <!-- Input jam mati -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam Mati"
        android:layout_marginTop="12dp"/>

    <TimePicker
        android:id="@+id/timePickerMati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner" />

    <!-- Checkbox hari -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <CheckBox android:id="@+id/cbSen" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sen"/>
        <CheckBox android:id="@+id/cbSel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sel"/>
        <CheckBox android:id="@+id/cbRab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rab"/>
        <CheckBox android:id="@+id/cbKam" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Kam"/>
        <CheckBox android:id="@+id/cbJum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Jum"/>
        <CheckBox android:id="@+id/cbSab" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sab"/>
        <CheckBox android:id="@+id/cbMin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Min"/>
    </LinearLayout>

    <!-- Tombol simpan -->
    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SIMPAN"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

</LinearLayout>
