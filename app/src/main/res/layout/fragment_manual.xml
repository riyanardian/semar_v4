<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/main"
    android:padding="16dp">

    <!-- Tombol Back -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/icon_kembali"
        android:contentDescription="Kembali"
        android:layout_gravity="start"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:elevation="6dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontrol Relay 1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#5B2DBA"/>


            <Button
                android:id="@+id/btnRelayOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relay ON"
                android:backgroundTint="#5B2DBA"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_card"
                />

            <Button
                android:id="@+id/btnRelayOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relay OFF"
                android:backgroundTint="#5B2DBA"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_card"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="16dp">

                <!-- Relay 1 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/ivStatusRelay1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_red" />

                    <TextView
                        android:id="@+id/tvStatusRelay1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Status Relay 1"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        />
                </LinearLayout>

                <!-- Relay 2 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivStatusRelay2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@drawable/circle_red" />

                    <TextView
                        android:id="@+id/tvStatusRelay2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Status Mesin"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>


            <!-- Informasi Runhour Relay 2 -->
            <TextView
                android:id="@+id/tvRunhourRelay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Runhour Mesin 2: 0 Jam"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="30dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/resetrunhour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Reset RunHour"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
